<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>BlackBoard</title>

    <!-- Bootstrap core CSS-->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Page level plugin CSS-->
    <link href="vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin.css" rel="stylesheet">

  </head>

  <body id="page-top">

      <%- include('header.ejs') %>

      <div id="wrapper">
  
        <!-- Sidebar -->
        <%- include('sidebar.ejs') %>

      <div id="content-wrapper">

        <div class="container-fluid">

          <div class="list-group">

               <% for (var i = 0; i<tasksList.length; i++){ 
                console.log(tasksList[i]);
              
                %> 
                <% if (tasksList[i].dateCloture ) {%>
                  <a href="#" class="list-group-item list-group-item-action list-group-item-success"> 
                  <% } else if (!tasksList[i].dateCloture && new Date() > tasksList[i].dateDue){ %>
                    <a href="#" class="list-group-item list-group-item-action list-group-item-danger">
                <%} else { %>
                  <a href="#" class="list-group-item list-group-item-action">
                      <% }%>
                    <div class="d-flex w-100 justify-content-between">
                      <h5 class="mb-1"><%=tasksList[i].name%></h5>
                      <small>Date de la demande: <%=dateFormat(tasksList[i].dateInsert)%></small>
                    </div>
                    <p class="mb-1">Le client <%=tasksList[i].owner%> souhaite un remboursement intergale de sa commande</p>
                    
                    <% if (!tasksList[i].dateCloture && new Date() > tasksList[i].dateDue ) {%>
                      <small><i class="fas fa-exclamation-circle"></i> Echéance dépassée: <%=dateFormat(tasksList[i].dateDue)%></small>
                    <% } else if (tasksList[i].dateCloture ){ %>
                        <small><i class="fas fa-check-square"></i> Cloturée le : <%=dateFormat(tasksList[i].dateCloture)%></small>                   
                        <%} else{ %>
                          <small>Echéance : <%=dateFormat(tasksList[i].dateDue)%></small> 
                          <%}%> 
      
                </a>
                <% } %>
  
          </div>


        </div>
        <!-- /.container-fluid -->

        <!-- Sticky Footer -->
        <footer class="sticky-footer">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright © Blackboard</span>
            </div>
          </div>
        </footer>

      </div>
      <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->



    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="vendor/chart.js/Chart.min.js"></script>
    <script src="vendor/datatables/jquery.dataTables.js"></script>
    <script src="vendor/datatables/dataTables.bootstrap4.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin.min.js"></script>

    <!-- Demo scripts for this page-->
    <script src="js/demo/datatables-demo.js"></script>
    <script src="js/demo/chart-area-demo.js"></script>

  </body>

</html>
