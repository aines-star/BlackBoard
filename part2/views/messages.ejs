            <tbody>
                <% for (var i = 0; i<messagesList.length; i++){ 
                  console.log(messagesList[i]);
                
                  %> 

                  <tr>
                    <% if (messagesList[i].read) {%>
                      <td><i class="fas fa-envelope-open"></i></td> 
                      <% } else{ %>
                      <td><i class="fas fa-envelope"></i></td>
                    
                    <%}%>
                <td><%=messagesList[i].title%></td>
                <td><%=messagesList[i].content%></td>
                <td><%=messagesList[i].dateExp%></td>
                <td><%=messagesList[i].sender%></td>
              </tr>
                  <% } %>

              
        
